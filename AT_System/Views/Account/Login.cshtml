@model AT_System.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}
</br></br>

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div style="vertical-align:middle; text-align:center;">
    <div class="Tb-Login">
            
            <table width="500"  border="0" align="center" cellpadding="0" cellspacing="0" bordercolor="#f4f4f4">
              <tr>
                <td   bordercolor="#FFFFFF" align="center" >
                @*<img src="Images/rsz_cbi_logo.jpg" />*@
                <table width="100%"  border="0" cellpadding="1" cellspacing="2" >
              <tr >
                <td colspan="2" align="center">
                    <asp:Label ID="lbl_error" runat="server" CssClass="Errmsg"></asp:Label>
                  </td>
              </tr>
              <tr >
                <td width="50%" align="right"><span class="Txt-Info">@Html.LabelFor(m => m.UserName)</span></td>
                <td width="50%" align="left">
                    
                    @Html.TextBoxFor(m => m.UserName, new { @autofocus="autofocus",@onfocus="$(this).css('background-color','yellow')",@onblur="$(this).removeAttr('style')" })
                    @Html.ValidationMessageFor(m => m.UserName)

                </td>
              </tr>
              <tr >
                <td align="right"><span class="Txt-Info">@Html.LabelFor(m => m.Password)</span></td>
                <td align="left">
                    
                    @Html.PasswordFor(m => m.Password, new { @onfocus="$(this).css('background-color','yellow')",@onblur="$(this).removeAttr('style')" })
                    @Html.ValidationMessageFor(m => m.Password)

                </td>
              </tr>
              <tr >
                <td>&nbsp;</td>
                <td align="left">
                    <input type="submit" value="Log in" class="btn btn-lg btn-default" style="width:100px;" />
                    

                  </td>
              </tr>
              <tr >
                <td colspan="2" align ="center" ><span>*** Username and Password same as Windows Logon ***</span></td>
                @Html.ValidationMessage("LoginError")
              </tr>
            </table></td>
              </tr>
            </table>
     </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
