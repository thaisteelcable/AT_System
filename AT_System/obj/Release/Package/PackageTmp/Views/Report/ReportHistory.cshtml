@model List<AT_System.Models.vAssetTransfer_ReportHistory>

@{
    ViewBag.Title = "History Report";
    Layout = null;
}

<meta http-equiv="X-UA-Compatible" content="IE=edge" />

<link href="~/Content/bootstrap.css" rel="stylesheet" />


    <h3>Asset Transfer Report History</h3>
    <br />

        <table class="table table-bordered table-hover">
            <thead style="text-align: center;">
            <tr>
                <td class="th-sender">NO.</td>
                <td class="th-sender">Doc NO.</td>
                <td class="th-sender">Create Date</td>
                <td class="th-sender">Create Time</td>
                <td class="th-sender">Asset</td>
                <td class="th-sender">Description</td>
                <td class="th-sender">Cost Center</td>
                <td class="th-sender">Room</td>
                <td class="th-sender">Qty</td>

            </tr>
            
            </thead>
            <tbody>
                @{ int no = 1;
                   var strDate = "";
                   var strDateTmp = "";
                   var strTime = "";
                   var strTimeTmp = "";
                   var strAsset = "";
                }
                @foreach (var item in Model)
                {
                <tr>
                    @{ 
                   
                    
                    
                        if (item.CreateDate != strDateTmp || item.CreateTime != strTimeTmp || strAsset != item.Asset)
                        {
                            strDate = item.CreateDate;
                            strTime = item.CreateTime;
                            strDateTmp = strDate;
                            strTimeTmp = strTime;
                            //item.CreateDate = item.CreateDate == null ? null : DateTime.ParseExact(item.CreateDate, "yyyymmdd", null).ToString("dd.mm.yyyy");
                            //item.CreateTime = item.CreateTime == null ? null : DateTime.ParseExact(item.CreateTime, "HHmmss", null).ToString("HH.mm.ss");
                            strDate = DateTime.ParseExact(strDate, "yyyymmdd", null).ToString("dd.mm.yyyy");
                            strTime = DateTime.ParseExact(strTime, "HHmmss", null).ToString("HH.mm.ss");
                            <td class="center">@(no++)</td>
                            <td>@Html.DisplayFor(modelItem => item.DocNo)</td>
                            <td>@strDateTmp</td>                 
                            <td>@strTimeTmp </td>
                            <td>@Html.DisplayFor(modelItem => item.Asset)</td>
                            <td>@Html.DisplayFor(modelItem => item.AssetDescription)</td>
                            <td>@Html.DisplayFor(modelItem => item.CostCenter)</td>
                            <td>@Html.DisplayFor(modelItem => item.Room)</td>
                            <td>@Html.DisplayFor(modelItem => item.Qty)</td>
                       }else{
                           strDateTmp = item.CreateDate;
                           strTimeTmp = item.CreateTime;
                       }
                    
                           strAsset = item.Asset;
                    }
                </tr>
                }
            </tbody>
        </table>



