        <td>@(no++)</td>

        <td>
@*            @Html.DisplayFor(modelItem => item.Client)*@
            @Html.HiddenFor(modelItem => item.Client)
@*            @Html.DisplayFor(modelItem => item.AutoRun)*@
            @Html.HiddenFor(modelItem => item.AutoRun)
            @Html.DisplayFor(modelItem => item.ReceiverCC)
@*            @Html.DisplayFor(modelItem => item.Status)*@
            @Html.HiddenFor(modelItem => item.Status)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.FieldCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentCode)
        </td>
        <td>

            @Html.ActionLink("Edit", "Edit", new { id = item.AutoRun }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.AutoRun }) ||

